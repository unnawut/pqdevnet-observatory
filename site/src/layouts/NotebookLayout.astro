---
import BaseLayout from './BaseLayout.astro';
import NotebookEmbed from '@/components/NotebookEmbed.astro';
import DateNav from '@/components/DateNav.astro';
import type { MarkdownHeading } from 'astro';
import { getAvailableDates } from '@/lib/data';

interface Props {
  title: string;
  description: string;
  headings: MarkdownHeading[];
  currentDate: string;
  notebookId: string;
  htmlPath: string;
}

const { title, description, headings, currentDate, notebookId, htmlPath } = Astro.props;

const availableDates = getAvailableDates();
---

<BaseLayout title={title} description={description} headings={headings}>
  <DateNav slot="header" currentDate={currentDate} notebookId={notebookId} availableDates={availableDates} />
  <NotebookEmbed htmlPath={htmlPath} title={title} />
</BaseLayout>
