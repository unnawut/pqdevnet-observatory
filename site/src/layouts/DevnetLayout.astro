---
import BaseLayout from './BaseLayout.astro';
import NotebookEmbed from '@/components/NotebookEmbed.astro';
import DevnetNav from '@/components/DevnetNav.astro';
import type { MarkdownHeading } from 'astro';
import { getAvailableDevnets } from '@/lib/PQDevnetSiteData';

interface Props {
  title: string;
  description?: string;
  headings: MarkdownHeading[];
  currentDevnet: string;
  notebookId: string;
  htmlPath: string;
}

const { title, description = '', headings, currentDevnet, notebookId, htmlPath } = Astro.props;

const availableDevnets = getAvailableDevnets();
---

<BaseLayout title={title} description={description} headings={headings}>
  <DevnetNav slot="header" currentDevnet={currentDevnet} notebookId={notebookId} availableDevnets={availableDevnets} />
  <NotebookEmbed htmlPath={htmlPath} title={title} />
</BaseLayout>
